# Free Intelligence - Environment Variables Template
# Copy this file to .env.local and configure as needed

# Demo Mode Configuration (FI-UI-FEAT-207)
# Enable demo mode with deterministic dataset generation
NEXT_PUBLIC_DEMO_MODE=1

# Demo seed (deterministic): same seed = same dataset
NEXT_PUBLIC_DEMO_SEED="fi-2025"

# Number of sessions to generate: 12 | 24 | 60
NEXT_PUBLIC_DEMO_SESSIONS=24

# Events profile:
# - small: 30-80 events per session
# - large: 400-2k events per session
# - mix: 80% small + 20% large (ensures â‰¥1 session >200 events for virtualization)
NEXT_PUBLIC_DEMO_EVENTS_PROFILE="mix"

# Latency range (ms): simulates network delay "min-max"
NEXT_PUBLIC_DEMO_LATENCY_MS="80-140"

# Error injection rate (0-5%): probability of 5xx error for testing fallback/retry
NEXT_PUBLIC_DEMO_ERROR_RATE_PCT=0

# Timeline API Configuration
NEXT_PUBLIC_TIMELINE_API_URL=http://localhost:9002

# LAN-Only Banner (FI-SEC-FEAT-002)
NEXT_PUBLIC_LAN_BANNER=1
